<header>
      <h1>Books</h1>
    </header>

      <div class="hosoku-box">
       <div class="hosoku-item">Title</div>
       <div class="hosoku-item">Body</div>
       <div class="hosoku-item" colspan="3"></div>
      </div>

<div class="list-wrap">
  <% @books.each do |book| %>
  <div class="list-box">
      <div class="list-title-box">
       <span class="list-title"><%= book.title %></span></div>
       <div class="list-body-box">
      <span class="list-body"><%= book.body %></span></div>
      <div class="nav-box">
      <div class="nav-show-box">
       <a class="nav-item"><%= link_to "Show", book_path(book.id) %></a>
       </div>
       <div class="nav-edit-box">
       <a class="nav-item"><%= link_to "Edit", edit_book_path(book.id) %></a>
       </div>
       <div class="nav-destroy-box">
       <a class="nav-item"><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></a>
       </div>
       </div>
  </div>
</div>

  <% end %>

<h2>New book</h2>
<% if @book.errors.any? %>
<div class="error-box">
 <div class="error-title"><%= @book.errors.count %> errors prohibited this book from being saved:</div>
 <ul>
  <div class="error-body"><% @book.errors.full_messages.each do |message| %>
   <li><%= message %></li></div>
   <% end %>
 </ul>
</div>
 <% end %>

<%= form_with model: @book, url: '/books', method: :post do |f| %>

 <div class="new-title-error"><% f %>Title</div>
 <div class="new-title-error"><%= f.text_field :title %></div>

 <div class="new-body-error"><% f %><p>Body</p></div>
 <div class="new-body-error"><%= f.text_area :body %></div>

 <%= f.submit 'Create Book' %>

 <% end %>